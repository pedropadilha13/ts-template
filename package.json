{
  "name": "ts-template",
  "version": "1.0.0",
  "description": "Basic TypeScript setup for Express projects",
  "main": "build/index.js",
  "scripts": {
    "dev:build": "tsc -w",
    "dev:run": "nodemon build/index.js",
    "dev": "concurrently npm:dev:*",
    "start": "node build/index.js",
    "clean": "rm -rf build/ *.log",
    "prebuild": "npm run clean && npm run lint",
    "build": "tsc",
    "postbuild": "npm run copy-views",
    "eslint": "eslint .eslintrc ./src",
    "lint": "prettier --write src/ --loglevel silent && eslint .eslintrc src/ --fix --quiet",
    "copy-views": "cp -r src/views build/ && cp -r src/public build/",
    "test": "jest",
    "docs": "rm -rf docs && typedoc --tsconfig tsconfig.json --listInvalidSymbolLinks"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pedropadilha13/ts-template.git"
  },
  "author": "Pedro Padilha",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/pedropadilha13/ts-template/issues"
  },
  "homepage": "https://github.com/pedropadilha13/ts-template#readme",
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/body-parser": "^1.19.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cookie-session": "^2.0.42",
    "@types/ejs": "^3.0.5",
    "@types/express": "^4.17.11",
    "@types/http-errors": "^1.8.0",
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.168",
    "@types/morgan": "^1.9.2",
    "@types/node": "^14.14.25",
    "@types/passport": "^1.0.6",
    "@types/passport-jwt": "^3.0.4",
    "@types/passport-local": "^1.0.33",
    "@types/table": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.14.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.18.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "typedoc": "^0.20.24",
    "typescript": "^4.1.4"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "bcrypt": "^5.0.0",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.5",
    "cookie-session": "^1.4.0",
    "dotenv": "^8.2.0",
    "ejs": "^3.1.5",
    "express": "^4.17.1",
    "express-flash-message": "^2.0.0",
    "joi": "^17.3.0",
    "lodash": "^4.17.20",
    "moment": "^2.29.1",
    "mongoose": "^5.11.13",
    "morgan": "^1.10.0",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "table": "^6.0.7",
    "ts-jest": "^26.5.1",
    "ts-node": "^9.1.1",
    "winston": "^3.3.3"
  }
}
